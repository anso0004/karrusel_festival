---
import "../styles/generel.css";
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>
<style>
  button {
    /* padding-right: 29px;
    padding-left: 29px;
    padding-top: 48px;
    padding-bottom: 48px; */
    border-radius: 80px;
  }
  .primary {
    font-size: 24px;
    border: none;
    background-color: var(--black_90);
    color: bisque;
    position: relative;
    border-radius: 80px;

    display: flex;
    justify-content: center;
    align-items: center;
  }
  .primary::after {
    content: "";
    position: absolute;
    height: 110%;
    width: 110%;
    border-radius: 80px;
    background-image: var(--gradientRegnbue);
    z-index: -1;
  }
  .primary:hover {
    filter: drop-shadow(0px 0px 10px yellow);
    background-color: var(--black_90);
    z-index: 1;
  }

  .secondary {
    color: #c9c9c9;
    background-color: black;
    border-color: #c9c9c9;
    font-size: 24px;
    font-family: Lato;
    font-weight: 600;
    word-wrap: break-word;
  }
  .secondary:hover {
    color: #c9c9c9;
    background-color: #2f2f2f;
    font-size: 24px;
    font-family: Lato;
    font-weight: 600;
    word-wrap: break-word;
    border: none;
  }

  .third {
    font-size: 24px;
    padding-left: 29px;
    padding-right: 29px;
    padding-top: 21px;
    padding-bottom: 21px;
    background: black;
    border-radius: 80px;
    border: 5px dotted;
    justify-content: center;
    align-items: center;
    gap: 61px;
    color: bisque;
    background-image: var(--gradientRegnbue);
    
    position: relative;
    
    -webkit-background-clip: text;
    -webkit-text-fill-color: #FFD7FC;
  }
  .third:hover{
    border: 1.8px solid;
    background-image: var(--gradientRegnbue);
     -webkit-background-clip: text;
    
  }

</style>
