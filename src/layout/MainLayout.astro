---
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/generel.css";
import ArtistButton from "../components/ArtistButton.astro";
import ArtistInfo from "../components/ArtistInfo.astro";
import SpotifyList from "../components/SpotifyList.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Stick+No+Bills:wght@200..800&display=swap" rel="stylesheet" />
  </head>
  <body>
    <Header />
    <h1>{title}</h1>
    <h2>Hej med jer</h2>
    <main>
      <slot />
    </main>
    <SpotifyList variant="1" />
    <SpotifyList variant="2" />
    <SpotifyList variant="3" />
    <SpotifyList variant="4" />
    <SpotifyList variant="5" />
    <ArtistInfo variant="facebook" />
    <ArtistInfo variant="instagram" />
    <ArtistInfo variant="spotify" />
    <ArtistInfo variant="map" />
    <ArtistInfo variant="calender" />
    <ArtistInfo variant="time" />
    <ArtistButton variant="primary" size="big">LÆS MERE</ArtistButton>
    <ArtistButton variant="secondary" size="medium">LÆS MERE</ArtistButton>
    <ArtistButton variant="secondary" size="small">LÆS MERE</ArtistButton>
    <Footer />
  </body>
</html>
